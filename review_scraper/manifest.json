{
  "manifest_version": 3,
  "name": "Google Reviews Scraper",
  "version": "1.0",
  "description": "Scrapes Google reviews from a business page",
  "permissions": ["activeTab", "scripting", "downloads", "identity"],
  "host_permissions": ["https://sheets.googleapis.com/"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  }
}
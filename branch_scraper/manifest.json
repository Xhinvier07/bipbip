{
  "manifest_version": 3,
  "name": "BPI Branch Scraper",
  "version": "1.0",
  "description": "Scrape BPI branch data and send to Google Sheets",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://www.bpi.com.ph/*",
    "https://sheets.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "290948446210-0fm8b3ivfj670ssu5aci9f4aekbmrkbh.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://www.bpi.com.ph/about-bpi/contact-us*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BPI Branch Scraper"
  }
}